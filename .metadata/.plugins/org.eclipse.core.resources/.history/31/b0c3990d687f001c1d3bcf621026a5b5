package com.rohan.jdbc.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class AccountDAO {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		try {
			Connection connection = DriverManager.getConnection("jdbc:mysql://localhost/mydb", "root", "bolbona");
			System.out.println(connection);
			Statement statement = connection.createStatement();
			//int result = statement.executeUpdate("insert into account values(1,'nag','rohan',10000)");
			//System.out.println(result + " rows got inserted");
			int result = statement.executeUpdate("update account set bal=50000 where accno=1");
			System.out.println(result + " rows got updated");
		} catch (SQLException e) {
			e.printStackTrace();
		}

	}

}
